// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Access {
  id     Int     @id @default(autoincrement())
  login  String
  password  String
}

model Doctors {
  id               Int     @id @default(autoincrement())
  firstName        String
  lastName         String
  specialization   String
  phone_number     BigInt
  appointments     Appointments[] // Adding the opposite relation field
  services     Services[] // Adding the opposite relation field
}


// Osoby w rejestracji
model Registration_stuff {
  id               Int     @id @default(autoincrement())
  firstName        String
  lastName         String
  phone_number     BigInt
}

model Patients {
  id               Int     @id @default(autoincrement())
  firstName        String
  lastName         String
  pesel            BigInt
  email            String
  phone_number     BigInt
  address          String
  appointments     Appointments[] // Adding the opposite relation field
}

// Us≈Çugi
model Services {
  id             Int     @id @default(autoincrement())
  type           String
  doctor_id      Int
  price          Float
  duration       DateTime
  doctors        Doctors @relation(fields: [doctor_id], references: [id])
  appointments   Appointments[] // Adding the opposite relation field
}

//  Wizyty
model Appointments {
  id               Int     @id @default(autoincrement())
  patient_pesel    BigInt
  patient_id      Int
  doctor_id        Int
  service_id       Int
  date             DateTime
  time             DateTime @default(now())
  financing        FinancingEnum
  doctor          Doctors @relation(fields: [doctor_id], references: [id])
  patient         Patients @relation(fields: [patient_id], references: [id])
  services         Services @relation(fields: [service_id], references: [id])
}

enum FinancingEnum {
  NFZ
  Private
  Benefit_System
}
